{% extends 'backend/base.html.twig' %}

{% block title %}Title{% endblock %}

{% block content %}
<div class="container">
    <h1>Title</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>TitleId</th>
                <td>{{ title.titleId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ title.title }}</td>
            </tr>
            <tr>
                <th>AlternateTitle</th>
                <td>{{ title.alternateTitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ title.description }}</td>
            </tr>
            <tr>
                <th>InternalNotes</th>
                <td>{{ title.internalNotes }}</td>
            </tr>
            <tr>
                <th>Pre</th>
                <td>{{ title.pre }}</td>
            </tr>
            <tr>
                <th>LastModifiedBy</th>
                <td>{{ title.lastModifiedBy }}</td>
            </tr>
            <tr>
                <th>LastModified</th>
                <td>{{ title.lastModified ? title.lastModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_title_index') }}">back to list</a>

    <a href="{{ path('backend_title_edit', {'titleId': title.titleId}) }}">edit</a>

    {{ include('backend/title/_delete_form.html.twig') }}
    </div>
{% endblock %}
