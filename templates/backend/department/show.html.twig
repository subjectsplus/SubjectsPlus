{% block body %}
    <h1>Department</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>DepartmentId</th>
                <td>{{ department.departmentId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>DepartmentSort</th>
                <td>{{ department.departmentSort }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ department.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ department.email }}</td>
            </tr>
            <tr>
                <th>Url</th>
