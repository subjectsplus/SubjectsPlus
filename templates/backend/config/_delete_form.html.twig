<div class="modal fade" id="confirmDeleteConfig" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="confirmDeleteConfigLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="confirmDeleteConfigLabel"><i class="fas fa-exclamation-circle btn-link-danger"></i> Delete Config Option</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'close.aria.label' | trans }}"></button>
            </div>
            <div class="modal-body">
                <p class="text-start">Are you sure you want to delete this item permanently?</p>
                {# TODO: Delete config option is not working correctly#}
                <form method="post" action="{{ path('config_delete', {'id': config.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ config.id) }}">
                    <div class="text-end">
                        <button type="button" class="btn btn-link-default me-2" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger btn-round"><i class="fas fa-trash"></i> Yes, delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>