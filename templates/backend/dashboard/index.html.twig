{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.dashboard' | trans }} | SubjectsPlus{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('mode-switcher') }}
{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row row-cols-2">
            <div class="col-7">
                <h1 class="fw-light">{{ 'control.dashboard' | trans }}</h1>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchMode">
                    <label class="form-check-label" for="switchMode">{{ 'control.dashboard.enable_dark_mode' | trans }}</label>
                </div>
            </div>
            <div class="col-5 text-end">
                <h5 class="fw-light mb-0">Welcome, {{ app.user.fname }}</h5>
                {# TODO: Fix path to edit profile #}
                <a href="/control/staff/{{ app.user.staffId }}/edit" class="btn btn-link lh-1 fs-sm">
                    <i class="fas fa-edit"></i> {{ 'control.dashboard.edit_profile' | trans  }}
                </a>
            </div>
        </div>
        {{ include('backend/dashboard/_action-menu.html.twig') }}

        <div class="panel-basic border-basic mt-4">
            <div class="row">
                <div class="col-lg-6">
                    {{ include('backend/dashboard/_guides-listing.html.twig') }}
                </div>
                <div class="col-lg-5 offset-lg-1 mt-4 mt-lg-0">
                    {{ include('backend/dashboard/_records-listing.html.twig') }}
                    {{ include('backend/dashboard/_faq-listing.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}