{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.dashboard' | trans }} | SubjectsPlus{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('mode-switcher') }}
{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="panel-basic border-basic">
        <h1 class="fw-light">{{ 'control.dashboard' | trans }}</h1>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchMode">
            <label class="form-check-label" for="switchMode">Enable Dark Mode</label>
        </div>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-2">
            <div class="col d-flex align-items-start">
                <div class="icon-square bg-light text-dark flex-shrink-0 me-2">
                    <svg class="bi" width="1em" height="1em"><use xlink:href="#toggles2"></use></svg>
                </div>
                <div>
                    <h2>{{ app.user.fname }} {{ app.user.lname }}</h2>
                    <ul class="list-group">
                        <li class="list-group-item">{{ app.user.title }}</li>
                        <li class="list-group-item">{{ app.user.email }}</li>
                        <li class="list-group-item">{{ app.user.tel }}</li>
                    </ul>
                    <a href="/control/staff/{{ app.user.staffId }}/edit" class="btn btn-gradient">
                        <i class="fas fa-edit"></i> {{ 'control.dashboard.edit_profile' | trans  }}
                    </a>
                </div>
            </div>
            <div class="col d-flex align-items-start">
                <div class="icon-square bg-light text-dark flex-shrink-0 me-2">
                    <svg class="bi" width="1em" height="1em"><use xlink:href="#cpu-fill"></use></svg>
                </div>
                <div>
                    <h2>{{ 'control.dashboard.quick_links' | trans }}</h2>
                    <ul class="list-group">
                        <li class="list-group-item">{{ 'control.dashboard.create_new_record' | trans }}</li>
                        <li class="list-group-item">{{ 'control.dashboard.create_new_guide' | trans }}</li>
                        <li class="list-group-item">{{ 'control.dashboard.create_new_faq' | trans }}</li>
                    </ul>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}