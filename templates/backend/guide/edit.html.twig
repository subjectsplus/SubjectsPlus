{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.guide_meta.edit.header' | trans }} | SubjectsPlus{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('bs_tooltips') }}
{% endblock %}

{% block content %}
    <div class="container py-5">
        <a href="{{ path('guide_index') }}" class="d-block fs-sm"><i class="fas fa-arrow-alt-circle-left"></i> {{ 'control.guides.back_to_list' | trans }}</a>
        <h1 class="fw-light d-inline-block me-2 mb-1">{{ 'control.guide_meta.edit.header' | trans }}</h1>
        {# TODO: link to front-end preview #}
        <a href="#" class="btn-link fs-sm align-baseline"><i class="fas fa-eye"></i> {{ 'control.guide.preview.label' | trans }}</a>

        {% set delete_faq = 'true' %}
        {% set update_history = 'true' %}
        {{ include('backend/guide/_form.html.twig', {'button_label': 'Save Guide Details'}) }}
    </div>
{% endblock %}