{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.header.guides.index' | trans }} | SubjectsPlus{% endblock %}

{% block content %}
<div class="container py-5">

    {% for message in app.flashes('notice') %}
        <div class="flash-notice alert alert-info text-center mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-8">
            <h1 class="fw-light">{{ 'control.header.guides.index' | trans }}</h1>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchShowUserGuides">
                <label class="form-check-label" for="switchShowUserGuides">{{ 'control.guides.index.my_guides_label' | trans }}</label>
            </div>
        </div>
        <div class="col-4 text-end">
            <a class="btn btn-gradient btn-pill-icon" type="button" href="{{ path('guide_new') }}"><i class="fas fa-plus-circle"></i> {{ 'control.guides.create_new_button' | trans }}</a>
        </div>
    </div>

    <div class="mt-3">
        {{ include('backend/guide/_search_with_filter.html.twig') }}
    </div>

    <div class="text-end mt-5">
        {{ include('backend/guide/_sorting_table_buttons.html.twig') }}
    </div>

    <table class="table table-striped table-responsive mt-3">
        <thead>
        <tr>
            <th>{{ 'control.guides.table.heading.visibility' | trans }}</th>
            <th>{{ 'control.guides.table.heading.guide_name' | trans }}</th>
            <th>{{ 'control.guides.table.heading.description' | trans }}</th>
            <th>{{ 'control.guides.table.heading.actions' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for guide in guides %}
            <tr>
                <td class="fs-xs text-center" style="width:75px;">
                    {% if guide.active %}
                        {{ '<i class="fas fa-check color-primary"></i>' }}
                    {% else %}
                        {{ '<i class="fas fa-times"></i>' }}
                    {% endif %}
                </td>
                <td style="width:45%;">
                    <div title="ID: {{ guide.subjectId }}">{{ guide.subject | raw }}</div>
                    <div class="fs-xs mt-2">Type: {{ guide.type }} | Slug: {{ guide.shortform }}</div>
                </td>
                <td style="width:45%;">
                    <div class="fs-sm">{{ guide.description | u.truncate(120, '...') | striptags | raw }}</div>
                    {% if guide.keywords %}
                    <div class="mt-3 fs-xs">
                        <strong>{{ 'control.guides.table.label.keywords' | trans }}:</strong>
                        {% for keyword in guide.keywords %}
                            {{ keyword }}
                            {% if not loop.last %}
                                {{'| '}}
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'control.faqs.table.action_buttons.aria' | trans }}">
                        <a href="{{ path('guide_show', {'subjectId': guide.subjectId}) }}" class="btn btn-icon-default rounded-0" type="button" title="{{ 'control.guides.table.button.guide_details' | trans }}"><i class="fas fa-cog"></i></a>
                        <a href="{{ path('guide_build', {'subjectId': guide.subjectId}) }}" class="btn btn-icon-default rounded-0" type="button" title="{{ 'control.faqs.table.button.guide_builder' | trans }}"><i class="fas fa-pen"></i></a>
                        {# TODO: link to front-end preview #}
                        <a href="#" class="btn btn-icon-default rounded-0" type="button" title="{{ 'control.guides.table.button.preview' | trans }}"><i class="fas fa-eye fs-sm"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>{{ 'control.faqs.table.no_records' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}