{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.header.faqs.index' | trans }} | SubjectsPlus{% endblock %}

{% block content %}
<div class="container py-5">
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-8">
            <h1 class="fw-light">{{ 'control.header.faqs.index' | trans }}</h1>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchShowUserFAQs" checked>
                <label class="form-check-label" for="switchShowUserFAQs">Show ONLY my FAQs</label>
            </div>
        </div>
        <div class="col-4 text-end">
            <a class="btn btn-gradient btn-pill-icon" type="button" href="{{ path('faq_new') }}"><i class="fas fa-plus-circle"></i> {{ 'control.faqs.create_new_button' | trans }}</a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Find a FAQ" aria-label="{{ 'control.header.search.aria.label' | trans }}">
                </div>

            </form>
        </div>
        <div class="col-auto">
            <select class="form-select form-select-sm rounded-pill" aria-label=".form-select-sm example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="col-auto">
            <select class="form-select form-select-sm rounded-pill" aria-label=".form-select-sm example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
    </div>

    <table class="table table-striped table-responsive mt-5">
        <thead>
            <tr>
                <th>Active</th>
                <th>Question</th>
                <th>Answer</th>
                <th>Keywords</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td class="fs-xs">
                    {% if faq.active %}
                        {{ '<i class="fas fa-circle btn-link-success"></i>' }}
                    {% else %}
                        {{ '<i class="fas fa-circle btn-link-danger"></i>' }}
                    {% endif %}
                    ID: {{ faq.faqId }}
                </td>
                <td>{{ faq.question | raw }}</td>
                <td>{{ faq.answer | u.truncate(130, '...') | striptags | raw }}</td>
                <td>
                    {% for keyword in faq.keywords %}
                        {{ keyword }}
                        {% if not loop.last %}
                            {{'| '}}
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('faq_show', {'faqId': faq.faqId}) }}">show</a>
                    <a href="{{ path('faq_edit', {'faqId': faq.faqId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}