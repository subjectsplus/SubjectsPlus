{% extends 'backend/base.html.twig' %}

{% block title %}FAQs index{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    
    <h1>FAQs index</h1>

    <a href="{{ path('faq_new') }}">Create new</a>
    
    <table class="table">
        <thead>
            <tr>
                <th>FaqId</th>
                <th>Question</th>
                <th>Answer</th>
                <th>Keywords</th>
                <th>Visibility</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.faqId }}</td>
                <td>{{ faq.question | raw }}</td>
                <td>{{ faq.answer | raw }}</td>
                <td>
                    {% for keyword in faq.keywords %}
                        {{ keyword }}
                        {% if not loop.last %}
                            {{'| '}}
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    {% if faq.active %}
                        {{ 'Active' }}
                    {% else %}
                        {{ 'Inactive' }}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('faq_show', {'faqId': faq.faqId}) }}">show</a>
                    <a href="{{ path('faq_edit', {'faqId': faq.faqId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
