{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.header.faqs.show_faq' | trans }} {{ faq.faqId }} | SubjectsPlus{% endblock %}

{% block content %}
<div class="container py-5">

    {% for message in app.flashes('notice') %}
        <div class="flash-notice alert alert-info text-center mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-8">
            <h1 class="fw-light d-inline-block me-2">{{ 'control.header.faqs.show_faq' | trans }} {{ faq.faqId }}</h1>
            <a href="#" class="btn-link fs-sm align-baseline" type="button"><i class="fas fa-eye"></i> {{ 'control.faqs.preview.label' | trans }}</a>
        </div>
        <div class="col-4 text-end">
            <a href="{{ path('faq_index') }}"><i class="fas fa-arrow-alt-circle-left"></i> {{ 'control.back_to_list' | trans }}</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="panel-basic border-basic">
                <h4>{{ 'control.faqs.table.heading.question' | trans }}</h4>
                <div>
                    {{ faq.question | raw }}
                </div>
                <h4 class="mt-3">{{ 'control.faqs.table.heading.answer' | trans }}</h4>
                <div>
                    {{ faq.answer | raw }}
                </div>
            </div>
        </div>
        <div class="col-lg-3 offset-lg-1">
            <h3 class="mt-4 mt-lg-0">{{ 'control.faq.form.settings_header' | trans }}</h3>
            <p>{{ 'control.faqs.table.heading.visibility' | trans }}:
                {% if faq.active %}
                    {{ '<i class="fas fa-check color-primary"></i>' }}
                {% else %}
                    {{ '<i class="fas fa-times"></i>Inactive' }}
                {% endif %}
            </p>
        </div>
    </div>

</div>






    <table class="table">
        <tbody>


            <tr>
                <th>Keywords</th>
                <td>
                    {% for keyword in faq.keywords %}
                        {{ keyword }}
                        {% if not loop.last %}
                            {{'| '}}
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Visibility</th>
                <td>
                    {% if faq.active %}
                        {{ 'Active' }}
                    {% else %}
                        {{ 'Inactive' }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Staff</th>
                {% for entry in staff %}
                    <span><td>{{ "%s, %s"|format(entry.dateAdded|format_date(), entry.email) }}</td></span>
                {% endfor %}
            </tr>
            <tr>
                <th>Subjects</th>
                {% for subject in faq.subjects %}
                    <span><td>{{ subject.subject }}</td><span>
                {% endfor %}
            </tr>
            <tr>
                <th>Collections</th>
                {% for faqpage in faq.faqpages %}
                    <span><td>{{ faqpage.name }}</td></span>
                {% endfor %}
            </tr>
        </tbody>
    </table>



    <a href="{{ path('faq_edit', {'faqId': faq.faqId}) }}">edit</a>

    {{ include('backend/faq/_delete_form.html.twig') }}
{% endblock %}
