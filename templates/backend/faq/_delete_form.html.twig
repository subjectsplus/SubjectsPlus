<div class="mt-3 text-end">
    <form method="post" action="{{ path('faq_delete', {'faqId': faq.faqId}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ faq.faqId) }}">
        <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#confirmDeleteFAQ">
            <i class="fas fa-trash"></i> Delete
        </button>

        <div class="modal fade" id="confirmDeleteFAQ" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="confirmDeleteFAQLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteFAQLabel">Warning: Delete FAQ</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this item permanently?</p>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-gradient"><i class="fas fa-trash"></i> Yes, delete this item.</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>