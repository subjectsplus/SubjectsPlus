{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.header.faqs.edit_existing_faq' | trans }} | SubjectsPlus{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('bs-tooltips') }}
{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row">
            <div class="col-8">
                <h1 class="fw-light d-inline-block me-2">{{ 'control.header.faqs.edit_existing_faq' | trans }}</h1>
                <a href="#" class="btn-link fs-sm align-baseline" type="button"><i class="fas fa-eye"></i> {{ 'control.faqs.preview.label' | trans }}</a>
            </div>
            <div class="col-4 text-end">
                <a href="{{ path('faq_index') }}"><i class="fas fa-arrow-alt-circle-left"></i> {{ 'control.back_to_list' | trans }}</a>
            </div>
        </div>
        <div class="row row-cols-lg-2">
            <div class="col-lg-8 text-end">
                {{ include('backend/includes/add_custom_tokens.html.twig') }}
            </div>
        </div>
        <div class="mt-3">
            {% set delete_faq = 'true' %}
            {% set update_history = 'true' %}
            {{ include('backend/faq/_form.html.twig', {'button_label': 'control.faq.form.update_faq' | trans}) }}
        </div>
    </div>
    {{ include('backend/media/sidebar.html.twig') }}
    {{ include('backend/records/sidebar.html.twig') }}
{% endblock %}