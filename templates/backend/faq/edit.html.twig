{% extends 'backend/base.html.twig' %}

{% block title %}{{ 'control.header.faqs.edit_existing_faq' | trans }} | SubjectsPlus{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('bs_tooltips') }}
{% endblock %}

{% block content %}
    <div class="container py-5">
        <a href="{{ path('faq_index') }}" class="fs-xs"><i class="fas fa-arrow-alt-circle-left"></i> {{ 'control.faqs.back_to_list' | trans }}</a>

        <a href="{{ path('frontend_faq_show', {'faqId': faq.faqId}) }}" class="btn-link fs-xs ms-2" type="button" target="_blank"><i class="fas fa-eye"></i> {{ 'control.faqs.preview.label' | trans }}</a>

        <h1 class="fw-light">{{ 'control.header.faqs.edit_existing_faq' | trans }}</h1>

        <div class="row row-cols-lg-2">
            <div class="col-lg-8 text-end">
                {{ include('backend/includes/add_custom_tokens.html.twig') }}
            </div>
        </div>
        <div class="mt-3">
            {% set delete_faq = 'true' %}
            {% set update_history = 'true' %}
            {{ include('backend/faq/_form.html.twig', {'button_label': 'control.faq.form.update_faq' | trans}) }}
        </div>
    </div>
    {{ include('backend/media/sidebar.html.twig') }}
    {{ include('backend/records/sidebar.html.twig') }}
{% endblock %}