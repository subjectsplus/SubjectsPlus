{% extends 'backend/base.html.twig' %}

{% block browser_title %}{{ 'control.faqs.by_collection.heading' | trans }}{% endblock %}

{% block content %}
{# TODO: Will replace this screen with index with active filters #}
    <div class="row">
        <div class="col-sm-6 col-md-7 col-lg-8 col-xl-9">
            <h1 class="fw-light">{{ 'control.faqs.by_collection.heading' | trans }}</h1>
            {# TODO: Add active filter #}
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchShowActiveCollections">
                <label class="form-check-label" for="switchShowActiveCollections">Show ACTIVE collections</label>
            </div>
        </div>
        <div class="col-7 col-sm-6 col-md-5 col-lg-4 col-xl-3 text-sm-end mt-2 mt-sm-1">
            <span class="fs-sm d-inline-block">Jump to:</span>
            {# TODO: Dynamic list in alpha order with anchor tags #}
            <select class="form-select form-select-sm d-inline-block" style="width: calc(100% - 80px);" aria-label="{{ 'control.faqs.filter.collection.aria' | trans }}">
                <option selected>{{ 'control.faqs.filter.collection' | trans }}</option>
                <option value="1">Research</option>
                <option value="2">Catalog Help</option>
                <option value="3">Popular</option>
            </select>
        </div>
        {% for collection in collections %}
            {% if collection.faqs is not empty %}
                {# TODO: Add anchor tag with collection name value #}
                <h3 class="mt-4">{{ collection.name | raw}}</h3>
                <table class="table table-striped table-responsive">
                    <thead>
                    <tr>
                        <th>{{ 'control.faqs.table.heading.visibility' | trans }}</th>
                        <th>{{ 'control.faqs.table.heading.question' | trans }}</th>
                        <th>{{ 'control.faqs.table.heading.answer' | trans }}</th>
                        <th>{{ 'control.faqs.table.heading.actions' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for faq in collection.faqs|reverse %}
                        <tr>
                            <td class="fs-xs text-center" style="width:75px;">
                                {% if faq.active %}
                                    {{ '<i class="fas fa-check color-primary"></i>' }}
                                {% else %}
                                    {{ '<i class="fas fa-times"></i>' }}
                                {% endif %}
                            </td>
                            <td style="width:50%;">
                                <div title="ID: {{ faq.faqId }}">{{ faq.question | u.truncate(200, '...') | striptags | raw}}</div>
                                {% if faq.keywords %}
                                    <div class="fs-xs mt-3">
                                        <strong>{{ 'control.faqs.table.label.keywords' | trans }}:</strong>
                                        {% for keyword in faq.keywords %}
                                            {{ keyword }}
                                            {% if not loop.last %}
                                                {{'| '}}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </td>
                            <td style="width:50%;">{{ faq.answer | u.truncate(80, '...') | striptags | raw }}</td>
                            <td style="width:90px;">
                                <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'control.faqs.table.action_buttons.aria' | trans }}">
                                    <a href="{{ path('faq_edit', {'faqId': faq.faqId}) }}" class="btn btn-icon-default rounded-0" type="button" title="{{ 'control.faqs.table.button.edit' | trans }}"><i class="fas fa-pen"></i></a>
                                    {# TODO: link to front-end preview #}
                                    <a href="#" class="btn btn-icon-default rounded-0" type="button" title="{{ 'control.faqs.table.button.preview' | trans }}"><i class="fas fa-eye fs-sm"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td>{{ 'control.faqs.table.no_records' | trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}