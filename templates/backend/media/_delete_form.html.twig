<form method="post" action="{{ path('media_delete', {'mediaId': media.mediaId}) }}" 
    onsubmit="return confirm( 
            {% if ((media | get_media_attachments) is null) %}
                {{ 'Are you sure you want to delete this media?' }}
            {% else %}
                {{ 'This media is currently being actively used. Are you sure you want to delete this media?' }}
            {% endif %}
        );">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ media.mediaId) }}">
    <button class="btn">Delete</button>
</form>
