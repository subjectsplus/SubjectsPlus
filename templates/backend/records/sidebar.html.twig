{% block content %}

{# TODO: Refactor into different CSS #}
<style>
    #records-sidebar {
      float: right;
      width: 35%;
      box-sizing: border-box;
      padding: 0 0 0 20px;
      display: none;
    }

    #records-list {
      list-style-type: none;
      margin: 0 !important;
      padding: 0;
      overflow: auto;
      height: 300px;
    }

    #records-list li {
      background: #FAFAFA;
      margin-bottom: 1px;
      height: 56px;
      line-height: 56px;
      cursor: pointer;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }

    #records-list li:nth-child(2n) {
      background: #F3F3F3;
    }

    #records-list li:hover {
      background: #FFFDE3;
      border-left: 5px solid #DCDAC1;
      margin-left: -5px;
    }

    .records-card {
      padding: 0 10px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .records-card .records-picture {
      display: inline-block;
      vertical-align: middle;
      margin-right: 10px;
    }
</style>
<div id="record-sidebar-container"></div>

{{ encore_entry_script_tags('records_sidebar') }}
{% endblock %}