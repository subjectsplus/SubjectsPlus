{% block content %}
<style>

    #records-sidebar {
      float: right;
      width: 35%;
      box-sizing: border-box;
      padding: 0 0 0 20px;
      display: none;
    }

    #records-list {
      list-style-type: none;
      margin: 0 !important;
      padding: 0;
    }

    #records-list li {
      background: #FAFAFA;
      margin-bottom: 1px;
      height: 56px;
      line-height: 56px;
      cursor: pointer;
    }

    #records-list li:nth-child(2n) {
      background: #F3F3F3;
    }

    #records-list li:hover {
      background: #FFFDE3;
      border-left: 5px solid #DCDAC1;
      margin-left: -5px;
    }

    .records-card {
      padding: 0 10px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .records-card .records-picture {
      display: inline-block;
      vertical-align: middle;
      margin-right: 10px;
    }
</style>

<div id="records-sidebar">
    <div class="records-cards">
        <h1>Your records</h1>
        <ul id="records-list">
            {% for records_entry in records %}
                <li>
                    <div class="records-card" draggable="true" data-record-id="{{ records_entry.titleId }}"
                        data-record-title="{{ records_entry.title }}"
                        data-record-description="{{ records_entry.description }}" 
                        data-record-location="{{ (records_entry.location | first).location }}">
                            {{ records_entry.title }}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}