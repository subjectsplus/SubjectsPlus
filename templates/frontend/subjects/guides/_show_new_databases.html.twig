<h4 class="text-center">- {{ 'public.new_databases.label' | trans }} -</h4>
<ul class="list-unstyled fs-sm">
    {% for newdb in newestDatabases | slice(0,5) %}
        <li class="mb-1"><a href="{{ newdb.url }}" class="link-default">{{ newdb.title }}</a></li>
    {% else %}
        <li>{{ 'public.new_databases.no_results.label' | trans }}</li>
    {% endfor %}
</ul>
