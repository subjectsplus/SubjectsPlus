{# Set site logo  and site author#}
{% if getconfig('site_logo') %} {# TODO: Configure path for logo image set in config #}
    {% set logoSrc = getconfig('site_logo') %}
{% else %}
    {% set logoSrc = absolute_url(asset('build/images/frontend/sp_logo.png')) %}
{% endif %}

{% if metaAuthor is defined %}
    {% set logoAlt = metaAuthor %}
{% else %}
    {% set logoAlt = "SubjectsPlus" %}
{% endif %}

{# Navigation Switcher #}
{% if dataTheme is defined and dataTheme != "default" %}
    {% include('frontend/themes/' ~ dataTheme ~ '/includes/navigation.html.twig') %}
{%  else %}
    {% include('frontend/includes/navigation.html.twig') %}
{% endif %}