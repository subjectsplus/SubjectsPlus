<ul class="nav nav-pills" id="ResearchGuidesTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="guide-collections-tab" data-bs-toggle="tab" data-bs-target="#guide-collections" type="button" role="tab" aria-controls="guide-collections" aria-selected="false">Guide Collections</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="subject-guides-tab" data-bs-toggle="tab" data-bs-target="#subject-guides" type="button" role="tab" aria-controls="subject-guides" aria-selected="true">Subject Guides</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="course-guides-tab" data-bs-toggle="tab" data-bs-target="#course-guides" type="button" role="tab" aria-controls="course-guides" aria-selected="false">Course Guides</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="topic-guides-tab" data-bs-toggle="tab" data-bs-target="#topic-guides" type="button" role="tab" aria-controls="topic-guides" aria-selected="false">Topic Guides</a>
    </li>
</ul>
<div class="tab-content mt-3" id="ResearchGuidesTabContent">
    <div class="tab-pane fade" id="guide-collections" role="tabpanel" aria-labelledby="guide-collections-tab">
        <ul class="list-unstyled">
            {% for subject in subjects %}
                <li><a href="{{ path('subject_show', {'shortform':  subject.shortform  } ) }}">{{ subject.subject | raw }}</a></li>
            {% endfor %}
        </ul>
    </div>

    <div class="tab-pane fade show active" id="subject-guides" role="tabpanel" aria-labelledby="subject-guides-tab">
        <ul class="list-unstyled list-columns2">
            {% for subject in subjects %}
                {% if subject.type == "Subject" %}
                    <li class="mb-2"><a href="{{ path('subject_show', {'shortform':  subject.shortform  } ) }}">{{ subject.subject | raw }}</a></li>
                {% endif %}
        {% endfor %}
        </ul>
    </div>

    <div class="tab-pane fade" id="course-guides" role="tabpanel" aria-labelledby="course-guides-tab">
        <ul class="list-unstyled list-columns2">
            {% for subject in subjects %}
                {% if subject.type == "Course" %}
                    <li class="mb-2"><a href="{{ path('subject_show', {'shortform':  subject.shortform  } ) }}">{{ subject.subject | raw }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>

    <div class="tab-pane fade" id="topic-guides" role="tabpanel" aria-labelledby="topic-guides-tab">
        <ul class="list-unstyled list-columns2">
            {% for subject in subjects %}
                {% if subject.type == "Topic" %}
                    <li class="mb-2"><a href="{{ path('subject_show', {'shortform':  subject.shortform  } ) }}">{{ subject.subject | raw }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>