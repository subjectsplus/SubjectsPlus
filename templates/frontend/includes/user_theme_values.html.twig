{# Set theme variables styles #}
<style>
    :root {
    {# UM specific font override #}
    {% if dataTheme == 'um' %}
        --user-theme-font: "Source Sans Pro";
        --user-theme-semi-bold: 600;
    {% endif %}

    {# general #}
    {% if getconfig('theme_bg_color') %}
        --user-theme-bg-color: {{ getconfig('theme_bg_color') }};
    {% endif %}
    {% if getconfig('theme_text_color') %}
        --user-theme-text-color: {{ getconfig('theme_text_color') }};
    {% endif %}
    {% if getconfig('theme_link_color') %}
        --user-theme-link-color: {{ getconfig('theme_link_color') }};
    {% endif %}
    {% if getconfig('theme_link_hover_color') %}
        --user-theme-link-hover-color: {{ getconfig('theme_link_hover_color') }};
    {% endif %}

    {# menu #}
    {% if getconfig('theme_menu_bg_color') %}
        --user-theme-menu-bg-color: {{ getconfig('theme_menu_bg_color') }};
    {% endif %}
    {% if getconfig('theme_menu_text_color') %}
        --user-theme-menu-text-color: {{ getconfig('theme_menu_text_color') }};
    {% endif %}
    {% if getconfig('theme_menu_link_color') %}
        --user-theme-menu-link-color {{ getconfig('theme_menu_link_color') }};
    {% endif %}
    {% if getconfig('theme_menu_link_hover_color') %}
        --user-theme-menu-link-hover-color: {{ getconfig('theme_menu_link_hover_color') }};
    {% endif %}

    {# header #}
    {% if getconfig('theme_header_bg_color') %}
        --user-theme-header-bg-color: {{ getconfig('theme_header_bg_color') }};
    {% endif %}
    {% if getconfig('theme_header_text_color') %}
        --user-theme_header_text_color: {{ getconfig('theme_header_text_color') }};
    {% endif %}
    {% if getconfig('theme_header_link_color') %}
        --user-theme_header_link_color: {{ getconfig('theme_header_link_color') }};
    {% endif %}
    {% if getconfig('theme_header_link_hover_color') %}
        --user-theme_header_link_hover_color: {{ getconfig('theme_header_link_hover_color') }};
    {% endif %}

    {# footer #}
    {% if getconfig('theme_footer_bg_color') %}
        --user-theme-footer-bg-color: {{ getconfig('theme_footer_bg_color') }};
    {% endif %}
    {% if getconfig('theme_footer_text_color') %}
        --user-theme_footer_text_color: {{ getconfig('theme_footer_text_color') }};
    {% endif %}
    {% if getconfig('theme_footer_link_color') %}
        --user-theme_footer_link_color: {{ getconfig('theme_footer_link_color') }};
    {% endif %}
    {% if getconfig('theme_footer_link_hover_color') %}
        --user-theme_footer_link_hover_color: {{ getconfig('theme_footer_link_hover_color') }};
    {% endif %}

    {# UI  #}
    {% if getconfig('theme_ui_base_color') %}
        --user-theme-ui-base-color: {{ getconfig('theme_ui_base_color') }};
    {% endif %}
    {% if getconfig('theme_ui_base_text_color') %}
        --user-theme-ui-base-text-color: {{ getconfig('theme_ui_base_text_color') }};
    {% endif %}
    {% if getconfig('theme_ui_active_color') %}
        --user-theme-ui-active-color: {{ getconfig('theme_ui_active_color') }};
    {% endif %}
    {% if getconfig('theme_ui_active_text_color') %}
        --user-theme-ui-active-text-color: {{ getconfig('theme_ui_active_text_color') }};
    {% endif %}
    {% if getconfig('theme_ui_active_hover_color') %}
        --user-theme-ui-active-hover-color: {{ getconfig('theme_ui_active_hover_color') }};
    {% endif %}}
</style>